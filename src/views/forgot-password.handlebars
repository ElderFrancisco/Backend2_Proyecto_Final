<section id="forgot-password">
    {{#if error}}
    <div class="Error-custom">
        <Span class="Error-span">El enlace de restablecer contraseña, expiró</Span>
         <button class="close"   >X</button>
         </div>
    {{/if}}
    <div class="forgot-password">
        <h1>¿Olvidaste Tu contraseña?</h1>
        <p>Ingresa tu correo y te enviaremos un enlace para restablecerla</p>
        <form id="forgotPasswordForm" action="/api/session/forgot-password" method="post">
            <label for="emailInput">Email:</label>
            <input type="email" id="emailInput" name="email" placeholder="TuEmail@example.com" required>
            <button type="submit">Restablecer Contraseña</button>
        </form>
    </div>
    {{#if message}}
    <div class="message">
         {{message}}
         </div>
    {{/if}}
</section>

<style>
    .close{
        background-color: red;
        color: white;
        border: none;
        border-radius: 5px;

        cursor: pointer;

    }
   .Error-custom {
    width: 420px;
    display: flex;
    justify-content: space-between;
    position: absolute;
    background-color: #ff2235; /* Fondo rojo */
    border: 1px solid #ff2235; /* Borde rojo */
    border-radius: 5px; /* Bordes redondeados */
    color: #ffffff;
    font-weight: 500px; /* ¿Estás seguro de que necesitas 500px? Probablemente solo necesites 500 */
    padding: 10px; /* Espaciado interno */
    top: 20vh;
    text-align: center; /* Centrar texto */
}
    

    .message {
    background-color: #e5f1f8; /* Fondo celeste */
    border: 2px solid #007bff; /* Borde azul */
    border-radius: 5px; /* Bordes redondeados */
    padding: 10px; /* Espaciado interno */
    margin-top: 20px; /* Espacio superior */
    text-align: center; /* Centrar texto */
    color: #007bff; /* Color del texto */
}
    
    #forgot-password {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 90vh;
}

.forgot-password {
    max-width: 400px;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f9f9f9;
    text-align: center;
}

.forgot-password h1 {
    margin-top: 0;
}

.forgot-password p {
    margin-bottom: 20px;
}

.forgot-password form {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.forgot-password label {
    font-weight: bold;
}

.forgot-password input[type="email"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 3px;
    box-sizing: border-box;
}

.forgot-password button[type="submit"] {
    padding: 10px 20px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 3px;
    cursor: pointer;
}

.forgot-password button[type="submit"]:hover {
    background-color: #0056b3;
}

.error {
    color: red;
    margin-top: 5px;
}

.hidden {
    display: none;
}
</style>
<script>
const closeButton = document.querySelector('.Error-custom .close');
const errorDiv = document.querySelector('.Error-custom');

// Agregar un event listener para el click en el botón
closeButton.addEventListener('click', function() {
    // Agregar la clase 'hidden' al div
    errorDiv.classList.add('hidden');
});
</script>